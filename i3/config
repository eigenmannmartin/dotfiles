# Set Resolution
exec --no-startup-id xrandr --output eDP1 --mode 1920x1080

# Custom KeyBinds
bindsym Control+mod1+l exec sh ~/.i3/i3lock.sh
bindsym Control+mod1+s exec sh ~/.i3/i3suspend.sh
bindsym Print exec scrot '%Y-%m-%d-%T_$wx$h_scrot.png' -e 'mv $f ~/Pictures/screenshots/'

# Screen Setup
bindsym Control+mod4+1 exec sh ~/.i3/intScreen.sh
bindsym Control+mod4+2 exec sh ~/.i3/extScreen.sh
bindsym Control+mod4+3 exec sh ~/.i3/bothScreen.sh

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume 1 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec pactl set-sink-volume 1 -5% #decrease sound volume
bindsym XF86AudioMute exec pactl set-sink-mute 1 toggle # mute sound

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 20 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 20 # decrease screen brightness

# Media player controls
bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous


# Make the currently focused window a scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the first scratchpad window
bindsym $mod+minus scratchpad show

